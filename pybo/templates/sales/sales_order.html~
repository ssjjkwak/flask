<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const modalElement = document.getElementById('supplyModal');
        const registerButton = document.getElementById('registerButton'); // 등록 버튼
        let modalInstance = null;
        let scannedBoxes = new Set(); // 스캔된 박스를 저장할 Set
        let totalBoxCount = 0; // 총 박스 수량
        let totalItemCount = 0; // 총 제품 수량
        let rowsData = []; // 서버로 전송할 데이터
        let selectedRowData = {}; // 선택된 데이터 저장

        // **오른쪽 테이블 행 클릭 이벤트**
        document.querySelectorAll('.table-wrapper:nth-child(2) tbody tr').forEach(function (row) {
            row.addEventListener('click', function () {
                // 기존 선택된 행 스타일 제거
                document.querySelectorAll('.table-wrapper:nth-child(2) tbody tr').forEach(function (row) {
                    row.classList.remove('selected-row');
                });

                // 선택된 행 스타일 적용
                this.classList.add('selected-row');

                // 선택된 데이터 저장
                selectedRowData = {
                    so_no: this.cells[0].innerText.trim(),
                    so_seq: this.cells[1].innerText.trim(),
                    item_cd: this.cells[2].innerText.trim(),
                    item_name: this.cells[3].innerText.trim(),
                    sl_cd: this.cells[4].innerText.trim(),
                    so_qty: this.cells[5].innerText.trim(),
                    dlvy_qty: this.cells[6].innerText.trim(),
                    bp_cd: "{{ right_table_bp_cd }}", // 서버에서 전달받은 거래처 코드
                    bp_nm: "{{ right_table_bp_nm }}"
                };

                console.log('선택된 데이터:', selectedRowData);

                // 모달 열기 버튼 활성화
                document.getElementById('openModalButton').disabled = false;
            });
        });

        // **모달 열릴 때 초기화 및 설정**
        document.getElementById('openModalButton').addEventListener('click', function () {
            if (!selectedRowData.so_no) {
                alert('수주번호를 선택해주세요.');
                return;
            }

            modalInstance = new bootstrap.Modal(modalElement);
            modalInstance.show();

            // 초기화
            scannedBoxes.clear();
            totalBoxCount = 0;
            totalItemCount = 0;
            rowsData = [];

            document.getElementById('modal_bp_cd').value = "{{ right_table_bp_cd }}";
            document.getElementById('modal_bp_nm').value = "{{ right_table_bp_nm }}";
            document.getElementById('modal_so_no').value = selectedRowData.so_no;
            document.getElementById('modal_item_cd').value = selectedRowData.item_cd;
            document.getElementById('modal_so_qty').value = 0;

            const modalTableBody = document.getElementById('modalTableBody');
            modalTableBody.innerHTML = ''; // 테이블 초기화

            setTimeout(() => {
                const qrInputField = document.getElementById('udiInputFooter');
                if (qrInputField) qrInputField.focus();
            }, 500);
        });


        // 출하 등록 버튼 클릭
        registerButton.addEventListener('click', function () {
            if (rowsData.length === 0) {
                alert('등록할 데이터가 없습니다.');
                return;
            }

            console.log('등록 요청 데이터:', rowsData);

            fetch('/sales/sales_register/', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ rows: rowsData })
            })
            .then(response => {
                console.log('서버 응답 상태 코드:', response.status);
                if (!response.ok) throw new Error(`HTTP error! Status: ${response.status}`);
                return response.json();
            })
            .then(data => {
                if (data.status === 'success') {
                    alert(data.message || '등록이 완료되었습니다.');
                    console.log('등록 성공 메시지:', data.message);
                    modalInstance.hide(); // 모달 닫기
                } else {
                    console.warn('서버 응답 오류 메시지:', data.message);
                    alert(data.message || '등록 중 오류가 발생했습니다.');
                }
            })
            .catch(error => {
                console.error('등록 요청 중 오류 발생:', error);
                alert('서버와 통신 중 문제가 발생했습니다.');
            });
        });



        // **모달 닫힐 때 데이터 초기화**
        modalElement.addEventListener('hidden.bs.modal', function () {
            scannedBoxes.clear();
            totalBoxCount = 0;
            totalItemCount = 0;
            rowsData = [];
            console.log('모달 닫힘: 데이터 초기화 완료');
        });

        // **QR 코드 입력 이벤트**
        document.getElementById('udiInputFooter').addEventListener('input', function () {
            const qrCode = this.value.trim();

            if (qrCode.length === 47) {
                this.value = '';
                processQrCode(qrCode);
            }
        });

        // **QR 코드 처리 함수**
        function processQrCode(qrCode) {
            if (scannedBoxes.has(qrCode)) {
                console.log('이미 스캔된 QR 코드입니다:', qrCode);
                alert('이미 스캔된 QR 코드입니다.');
                return;
            }

            console.log('QR 코드 요청 시작:', qrCode);
            fetch('/sales/sales_detail/', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ udi_qr: qrCode })
            })
                .then(response => {
                    console.log('서버 응답 상태 코드:', response.status);
                    if (!response.ok) throw new Error(`HTTP error! Status: ${response.status}`);
                    return response.json();
                })
                .then(data => {
                    console.log('서버 응답 데이터:', data);
                    if (data.status === 'success' && data.sales_detail) {
                        scannedBoxes.add(qrCode);
                        addRowToModalTable(data.sales_detail);
                        totalBoxCount += 1;
                        totalItemCount += parseInt(data.sales_detail.cs_qty, 10);
                        updateTotals();
                    } else {
                        console.warn('서버 응답 오류 메시지:', data.message);
                        alert(data.message || '데이터를 찾을 수 없습니다.');
                    }
                })
                .catch(error => {
                    console.error('QR 코드 처리 중 오류:', error);
                    alert('서버와 통신 중 문제가 발생했습니다.');
                });
        }

        // **모달 테이블에 데이터 추가**
        function addRowToModalTable(data) {
            const modalTableBody = document.getElementById('modalTableBody');
            const row = document.createElement('tr');

            row.innerHTML = `
                <td>${data.box_num}</td>
                <td>${data.cs_qty}</td>
                <td>${data.sf40_date || '-'}</td>
                <td>${data.sf50_date || '-'}</td>
            `;

            modalTableBody.appendChild(row);

            rowsData.push({
                box_num: data.box_num,
                cs_qty: data.cs_qty,
                sf40_date: data.sf40_date,
                sf50_date: data.sf50_date,
                so_no: selectedRowData.so_no,  // 추가된 수주번호
                so_seq: selectedRowData.so_seq,  // 추가된 SEQ
                bp_cd: selectedRowData.bp_cd  // 추가된 거래처 코드
            });

            console.log('테이블에 데이터 추가:', data);
        }

        // **총합 데이터 업데이트**
        function updateTotals() {
            const totalBoxElement = document.getElementById('totalboxnum'); // 총 박스 수량
            const totalItemElement = document.getElementById('totalitemnum'); // 총 제품 수량
            const modalSoQtyElement = document.getElementById('modal_so_qty'); // 모달 수량 필드

            if (totalBoxElement) {
                totalBoxElement.value = totalBoxCount;
            } else {
                console.warn("총 박스 수량 요소(#totalboxnum)를 찾을 수 없습니다.");
            }

            if (totalItemElement) {
                totalItemElement.value = totalItemCount;
            } else {
                console.warn("총 제품 수량 요소(#totalitemnum)를 찾을 수 없습니다.");
            }

            // modal_so_qty 업데이트
            if (modalSoQtyElement) {
                modalSoQtyElement.value = totalItemCount; // 총 제품 수량을 업데이트
            } else {
                console.warn("모달 수량 요소(#modal_so_qty)를 찾을 수 없습니다.");
            }

            console.log(`총 박스 수량: ${totalBoxCount}, 총 제품 수량: ${totalItemCount}`);
        }

    });
</script>





{% endblock %}