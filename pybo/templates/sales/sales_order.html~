    <div class="modal fade" id="supplyModal" tabindex="-1" aria-labelledby="supplyModalLabel" role="dialog"
         aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">공급내역 등록</h5>
                </div>
                <div class="modal-body">
                    <form id="supplyForm" class="px-5" method="POST">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3 col-10">
                                    <label for="modal_bp_cd" class="form-label">주문처</label>
